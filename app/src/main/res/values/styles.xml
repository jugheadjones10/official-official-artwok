    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">6dp</item>
        <item name="android:background">@color/artwok_white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="Icon">
        <item name="android:padding">4dp</item>
        <item name="android:tint">@color/artwok_blue</item>
    </style>

    <style name="Icon.Clickable">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="voiceIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="android:maxWidth">1000dp</item>
        <item name="closeIcon">@drawable/ic_close_hint</item>
        <item name="queryBackground">@drawable/query_background</item>
    </style>

    <style name="ListingsTabsStyles" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15dp</item>
        <item name="textAllCaps">false</item>
    </style>

