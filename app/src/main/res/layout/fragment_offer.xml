<!--                    android:onClick="@{() -> OfferFragment.SendMessage()}"-->
<!--                    android:src="@drawable/ic_send_24px" />-->
<!--            </RelativeLayout>-->

            <Button
                android:id="@+id/offer_button"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:onClick="@{() -> OfferFragment.onOfferClicked()}"
                android:text="Offer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/review_button"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/rounded_blue_review_button"
                android:text="Write a review!"
                android:textAllCaps="false"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/offer_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
