<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.core.widget.NestedScrollView
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/seller_faq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/seller_faq"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seller_faq_description10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_des10"
                android:textColor="@color/almost_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seller_faq_description11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_des11"
                android:textColor="@color/almost_black" />

            <TextView
                android:id="@+id/seller_faq_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_des2"
                android:textColor="@color/almost_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seller_faq_description21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_des21"
                android:textColor="@color/almost_black" />

            <TextView
                android:id="@+id/seller_faq_description3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_des3"
                android:textColor="@color/almost_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seller_faq_description31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/faq_des31"
                android:textColor="@color/almost_black" />

            <!--        <ExpandableListView-->
            <!--            android:id="@+id/seller_expandable_faq"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:divider="@android:color/darker_gray"-->
            <!--            android:dividerHeight="0.5dp"-->
            <!--            android:layoutDirection="rtl"/>-->
            <!--        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/buyer_faq"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buyer_faq_description1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buyer_faq_desc1"
                android:textColor="@color/almost_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buyer_faq_description11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buyer_faq_desc11"
                android:textColor="@color/almost_black"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/buyer_faq_description2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buyer_faq_desc2"
                android:textColor="@color/almost_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buyer_faq_description21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buyer_faq_desc21"
                android:textColor="@color/almost_black" />

            <TextView
                android:id="@+id/buyer_faq_description3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buyer_faq_desc3"
                android:textColor="@color/almost_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buyer_faq_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buyer_faq_desc31"
                android:textColor="@color/almost_black" />
