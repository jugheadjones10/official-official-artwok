<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="314dp"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="3000"
                app:strokeColor="#FF777777"
                app:autoPlay="false"
                app:strokeWidth="1dp"/>

            <ImageView
                android:id="@+id/uploadPic"
                android:layout_width="match_parent"
                android:layout_height="314dp"
                android:layout_gravity="center"
                android:padding="100dp"
                app:srcCompat="@drawable/upload_pic_btn" />

            <HorizontalScrollView
                android:id="@+id/color_parlette_view"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.45">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/redBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_red"
                        android:padding="0dp" />

                    <Button
                        android:id="@+id/pinkBtnL"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_pink"
                        android:padding="0dp" />

                    <Button
                        android:id="@+id/greenBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_green" />

                    <Button
                        android:id="@+id/blueBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_blue" />


                    <Button
                        android:id="@+id/darkBlueBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_dark_blue" />

                    <Button
                        android:id="@+id/yellowBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_orange" />

                    <Button
                        android:id="@+id/purpleBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_purple" />

                    <Button
                        android:id="@+id/blackBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="31dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_black" />

                    <!--Button
                        android:id="@+id/whiteBtn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_circle_white" /-->
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:paddingRight="3dp"
                android:orientation="horizontal">

                <!--TextView
                    android:id="@+id/selectFontText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.07"
                    android:gravity="center_horizontal|center_vertical"
                    android:scaleType="fitCenter"
                    android:text="@string/font"
                    android:textAlignment="center" /-->

                <Spinner
                    android:id="@+id/fontSelectSpinner"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.11"
                    android:entries="@array/font_name_array" />

                <Spinner
                    android:id="@+id/fontSizeSpinner"
                    style="@style/spinner_style"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.065"
                    android:entries="@array/font_size_array" />

                <!--ImageView
                    android:id="@+id/incFont"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_inc_font" />

                <ImageView
                    android:id="@+id/decFont"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_dec_font" /-->

                <ImageView
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.016"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_divider" />

                <ImageView
                    android:id="@+id/boldBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_bold" />

                <ImageView
                    android:id="@+id/italicsBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_italics" />

                <ImageView
                    android:id="@+id/underlineBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.03"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_underline" />

                <ImageView
                    android:id="@+id/highlightBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.027"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_highlight" />

                <ImageView
                    android:id="@+id/fillBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.033"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_fill" />

                <ImageView
                    android:id="@+id/divider2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.016"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_divider" />

                <ImageView
                    android:id="@+id/alignLeft"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.033"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_left" />

                <ImageView
                    android:id="@+id/alignCenter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.033"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_center" />

                <ImageView
                    android:id="@+id/alignRight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.033"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_right" />

            </LinearLayout>

            <EditText
                android:id="@+id/new_post_desc"
                android:layout_width="match_parent"
                android:layout_height="247dp"
                android:autofillHints="@string/addDescription"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/upload_post_add_description"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/request_betterspinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Categories" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/artwok_black"
                    android:text="Budget                                       $"
                    android:textSize="18dp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <EditText
                android:id="@+id/new_post_hashtags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="start|top"
                android:hint="@string/upload_post_add_hashtags"
                android:inputType="textMultiLine"
                android:padding="10dp" />

            <ProgressBar
                android:id="@+id/upload_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:indeterminate="true"
                android:visibility="invisible" />

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/upload_btn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Request"
                    android:textColor="@color/artwok_black" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>