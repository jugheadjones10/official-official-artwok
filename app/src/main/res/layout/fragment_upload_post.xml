<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="time" type="String"/>
        <variable name="user" type="com.example.artwokmabel.models.User"/>
        <variable name="UploadPostFragment" type="com.example.artwokmabel.profile.uploadpost.UploadPostFragment"/>
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:menu="@menu/upload_post_toolbar"
                style="@style/Widget.Artwok.Toolbar">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_picture"
                    android:layout_width="@dimen/circle_profile_width"
                    android:layout_height="match_parent"
                    android:padding="@dimen/spacing_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/poster_username"
                        style="@style/TextAppearance.Artwok.ToolbarText"
                        android:text="@{user.username}" />

<!--                    <TextView-->
<!--                        android:id="@+id/time"-->
<!--                        style="@style/TextAppearance.Artwok.ToolbarText"-->
<!--                        android:text="@{time}" />-->
                </LinearLayout>

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:elevation="0dp"
            android:id="@+id/relativeLayout_rich_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.artwokmabel.profile.uploadpost.RichEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/lin_con"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edit_text_bg" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="270dp" />

<!--            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton-->
