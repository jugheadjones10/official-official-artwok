    <data>
<!--        <variable name="profilecallback" type="com.example.artwokmabel.homepage.adapters.ListingsAdapter.OnProfileClicked"/>-->
        <variable name="listingclickcallback" type="com.example.artwokmabel.homepage.adapters.ListingsAdapter.OnListingClicked"/>
        <variable name="listing" type="com.example.artwokmabel.models.Listing"/>

        <variable name="onfavlistingclicked" type="com.example.artwokmabel.homepage.adapters.ListingsAdapter.OnFavListingClicked"/>
        <variable name="favorite" type="android.widget.ImageView"/>
