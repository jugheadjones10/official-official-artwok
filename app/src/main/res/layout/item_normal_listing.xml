    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent_layout_card"
        android:background="@drawable/listing_rounded_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="@{() -> listingclickcallback.onListClicked(listing)}">

<!--        android:src="@drawable/favourite_post"-->
        <ImageView
            android:id="@+id/normal_listing_like"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:onClick="@{() -> onfavlistingclicked.onFavListingClicked(listing, favorite)}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--        android:clipToPadding="true"-->
<!--        app:cardCornerRadius="10dp"-->
<!--        <androidx.cardview.widget.CardView-->
