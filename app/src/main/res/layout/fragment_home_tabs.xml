<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="HomeTabsFragment"
            type="com.example.artwokmabel.homepage.homepagewrapper.HomeTabsFragment" />
    </data>

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.artwokmabel.homepage.homepagewrapper.HomeTabsFragment">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_height_normal"
                    android:layout_weight="1"
                    android:background="?attr/colorPrimary"
                    app:contentInsetStart="0dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_artwok_width_normal"
                            android:layout_height="match_parent"
                            android:layout_gravity="start|bottom"
                            android:layout_marginLeft="@dimen/spacing_large"
                            android:src="@drawable/artwok_login_icon" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/mainsearchbar"
                            android:layout_width="@dimen/icon_search_width_normal"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom"
                            android:onClick="@{() -> HomeTabsFragment.onSearchClicked()}"
                            android:src="@drawable/search_icon" />

                        <ImageButton
                            android:id="@+id/fav_btn"
                            android:layout_width="@dimen/icon_favorite_width_normal"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/spacing_large"
                            android:layout_marginLeft="@dimen/spacing_large"
                            android:background="@null"
                            android:scaleType="fitCenter"
                            android:onClick="@{() -> HomeTabsFragment.onFavClicked()}"
                            android:src="@drawable/ic_favorite_border_black_24dp" />
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tabs_height_normal"
                    app:tabGravity="fill"
                    app:tabTextAppearance="@style/CustomTextAppearanceTab"
                    app:tabIndicatorColor="@color/artwok_white"
                    app:tabMode="scrollable">
                </com.google.android.material.tabs.TabLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
