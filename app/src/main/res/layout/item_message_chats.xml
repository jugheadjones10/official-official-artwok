<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="user"
            type="com.example.artwokmabel.models.User" />

        <variable
            name="normalchat"
            type="com.example.artwokmabel.models.NormalChat" />

        <variable
            name="onchatclicked"
            type="com.example.artwokmabel.chat.tabs.MessageChatsAdapter.OnChatClicked" />

    </data>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical"
    android:onClick="@{() -> onchatclicked.onChatClicked(user)}">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_chats_imageview"
            android:layout_margin="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/message_chats_textview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:text="@{user.username}"
                android:textColor="@color/artwok_black"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/message_chats_textview_lastmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:text="@{normalchat.lastMessage}"
                android:layout_below="@+id/message_chats_textview_title"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/message_chats_textview_timestamp"
                android:text="@{normalchat.lastInteractionTime}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="12dp" />


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
</layout>