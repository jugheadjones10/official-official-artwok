<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/artwok_white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_android"
        app:civ_border_color="@color/artwok_black"
        app:civ_border_width="0.5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout1"
        android:layout_toRightOf="@+id/comment_profile_image"
        android:layout_marginTop="15dp"
        android:background="@drawable/grey_border_bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="20dp">


            <TextView
                android:id="@+id/comment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="mitch.tabian"
                android:textColor="@color/artwok_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/comment_username"
                android:text="this is a comment"
                android:textColor="@color/artwok_black"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/comment_time_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="3 d"
                android:textColor="@color/cat_bar_grey"
                android:textSize="12sp" />

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="20 likes"-->
            <!--                android:textStyle="bold"-->
            <!--                android:textColor="@color/cat_bar_grey"-->
            <!--                android:textSize="14sp"-->
            <!--                android:id="@+id/comment_likes"-->
            <!--                android:layout_marginTop="15dp"-->
            <!--                android:layout_marginLeft="15dp"-->
            <!--                android:layout_below="@+id/comment"-->
            <!--                android:layout_toRightOf="@+id/comment_time_posted"/>-->

            <TextView
                android:id="@+id/comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comment"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/comment_time_posted"
                android:text="Reply"
                android:textColor="@color/cat_bar_grey"
                android:textSize="12sp"
                android:textStyle="bold" />


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>