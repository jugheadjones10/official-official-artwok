<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="addlistingcallback"
            type="com.example.artwokmabel.profile.user.ProfileListingsFragment.OnAddListingClicked"/>
    </data>

<LinearLayout
    android:id="@+id/activity_listings_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:background="@color/artwok_white">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profile_listings_recyclerview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".HomeScreen" />


        <Button
            android:id="@+id/add_listings_button"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="20dp"
            android:alpha="0.95"
            android:background="@color/artwok_lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="@{() -> addlistingcallback.onAddListingClicked()}"
            android:text="Add Listing"
            android:fontFamily="@string/fontFamily__sans_serif_medium"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

<!--        <Button-->
<!--            android:id="@+id/add_listings_button"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
