<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable name="listing" type="com.example.artwokmabel.models.Listing"/>
        <variable name="user" type="com.example.artwokmabel.models.User"/>
        <variable name="sharecallback" type="com.example.artwokmabel.homepage.callbacks.ShareClickCallback"/>

        <variable
            name="ListingFragment"
            type="com.example.artwokmabel.homepage.listing.ListingFragment" />
    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/indiv_post"
        tools:context="com.example.artwokmabel.homepage.post.PostActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/offer_button"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:alpha="0.95"
            android:background="@color/artwok_lightblue"
            android:fontFamily="@string/fontFamily__sans_serif_medium"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="@{() -> ListingFragment.onOfferClicked(listing)}"
            android:text="Offer"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/indiv_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">


<!--                <androidx.constraintlayout.widget.ConstraintLayout-->
<!--                    app:layout_scrollFlags="scroll|exitUntilCollapsed"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content">-->

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/indiv_toolbar"
                        style="@style/Widget.Artwok.Toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        app:layout_collapseMode="pin">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="@dimen/circle_profile_width"
                            android:layout_height="match_parent"
                            android:onClick="@{() -> ListingFragment.onProfileClicked(user)}"
                            android:padding="@dimen/spacing_small" />

                        <TextView
                            android:id="@+id/poster_name"
                            style="@style/TextAppearance.Artwok.ToolbarText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/polite_type"
                            android:gravity="center_vertical"
                            android:text="@{user.username}"
                            android:textStyle="bold" />

                    </com.google.android.material.appbar.MaterialToolbar>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/carousel_constraint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/listing_inside_details_height"
                        android:layout_marginTop="?attr/actionBarSize">

                        <com.synnapps.carouselview.CarouselView
                            android:id="@+id/listing_image"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            app:autoPlay="false"
                            app:indicatorVisibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:id="@+id/item_photo_bottom_bar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listing_inside_details_height"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/spacing_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:id="@+id/item_details_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{listing.name}"
                            android:textColor="@color/almost_black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$ "
                                android:textColor="@color/almost_black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{Long.toString(listing.price)}"
                                android:textColor="@color/almost_black"
                                android:textSize="15sp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1" />

                    <!--                    Share Button-->
                    <!--                    <ImageButton-->
                    <!--                        android:id="@+id/share_button_indiv"-->
                    <!--                        android:layout_width="50dp"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:adjustViewBounds="true"-->
                    <!--                        android:background="@null"-->
                    <!--                        android:onClick="@{() -> sharecallback.onClick()}"-->
                    <!--                        android:padding="10dp"-->
                    <!--                        android:scaleType="fitCenter"-->
                    <!--                        app:srcCompat="@drawable/ic_share_black_24dp" />-->

                </LinearLayout>


<!--                </androidx.constraintlayout.widget.ConstraintLayout>-->


            </com.google.android.material.appbar.CollapsingToolbarLayout>



            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_collapseMode="pin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tabTextAppearance="@style/ListingsTabsStyles" />

        </com.google.android.material.appbar.AppBarLayout>

<!--        <androidx.core.widget.NestedScrollView-->
<!--            android:id="@+id/nested_scroll"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:fillViewport="true"-->
<!--            app:layout_behavior="@string/appbar_scrolling_view_behavior">-->

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:orientation="vertical">-->



                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

<!--            </LinearLayout>-->

<!--        </androidx.core.widget.NestedScrollView>-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>