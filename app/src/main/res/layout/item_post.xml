<!--            android:id="@+id/share_button"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="0dp"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:background="@null"-->
<!--            android:onClick="@{() -> sharecallback.onClick(post)}"-->
<!--            android:padding="10dp"-->
<!--            android:scaleType="fitCenter"-->
<!--            app:layout_constraintBottom_toTopOf="@+id/guideline4"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintVertical_bias="0.0"-->
<!--            app:srcCompat="@drawable/ic_share_black_24dp" />-->

        <LinearLayout
            android:id="@+id/webview_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintHeight_max="@dimen/post_max_height"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline4">

                <WebView
                    android:id="@+id/post_web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="15dp"
                    tools:layout_editor_absoluteY="130dp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="@dimen/post_details_height" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
